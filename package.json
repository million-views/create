{
    "name": "@m5nv/create-scaffold",
    "version": "0.2.0",
    "private": false,
    "type": "module",
    "description": "Scaffolds new projects for million-views using templates",
    "bin": {
        "create-scaffold": "./bin/index.mjs"
    },
    "exports": {
        ".": "./bin/index.mjs",
        "./schema/template.json": "./schema/template.json",
        "./schema/template.v1.json": "./schema/template.v1.json",
        "./types/template-schema": {
            "types": "./types/template-schema.d.ts",
            "default": "./types/template-schema.mjs"
        }
    },
    "files": [
        "bin",
        "schema",
        "types",
        "scripts",
        "docs",
        "LICENSE",
        "README.md"
    ],
    "engines": {
        "node": ">=22.0.0"
    },
    "keywords": [
        "scaffold",
        "scaffolding",
        "templates",
        "cli",
        "esm",
        "million-views",
        "project-generator"
    ],
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/million-views/create.git"
    },
    "bugs": {
        "url": "https://github.com/million-views/create/issues"
    },
    "homepage": "https://github.com/million-views/create#readme",
    "devDependencies": {
        "@types/eslint": "^9.6.1",
        "eslint": "^9.38.0",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-n": "^17.23.1",
        "eslint-plugin-promise": "^7.2.1",
        "typescript": "^5.6.3"
    },
    "scripts": {
        "lint": "eslint .",
        "prepare": "npm run lint",
        "schema:build": "node ./scripts/build-template-schema.mjs",
        "schema:check": "node ./scripts/build-template-schema.mjs --check && tsc --noEmit --project tsconfig.json",
        "test": "node ./scripts/test-runner.mjs",
        "test:all": "node ./scripts/test-runner.mjs",
        "test:quick": "node ./scripts/test-runner.mjs --quick",
        "test:env": "node ./test/environment-factory.test.mjs",
        "test:arg-parser": "node ./test/argument-parser.test.mjs",
        "test:options": "node ./test/options-processor.test.mjs",
        "test:setup-runtime": "node ./test/setup-runtime.test.mjs",
        "test:functional": "node ./test/cli.test.mjs",
        "test:spec": "node ./test/spec-compliance-verification.mjs",
        "test:leaks": "node ./test/resource-leak-test.mjs",
        "test:smoke": "node ./scripts/smoke-test.mjs",
        "validate": "npm run schema:check && node ./scripts/comprehensive-validation.mjs",
        "validate:docs": "node ./scripts/validate-docs.mjs",
        "validate:code": "node ./scripts/comprehensive-validation.mjs --code-only"
    }
}