{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.million-views.dev/create/selection.v1.json",
  "title": "Template Selection Manifest V1.0",
  "description": "A portable recipe containing all user choices and configuration values required to scaffold a project.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schemaVersion",
    "templateId",
    "choices",
    "placeholders"
  ],
  "properties": {
    "schemaVersion": {
      "type": "string",
      "const": "1.0.0",
      "description": "Matches the schema version of the template used."
    },
    "templateId": {
      "type": "string",
      "pattern": "^[a-z0-9-]+/[a-z0-9-]+$",
      "description": "The template ID used (e.g. acme/remix-v2)."
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "When this selection was created."
    },
    "choices": {
      "type": "object",
      "description": "The 'Stack' selections. Keys must match dimension IDs from the template.",
      "additionalProperties": {
        "oneOf": [
          { "type": "string", "description": "Single selection (e.g. deployment target)" },
          { "type": "array", "items": { "type": "string" }, "description": "Multi selection (e.g. auth providers)" }
        ]
      }
    },
    "placeholders": {
      "type": "object",
      "description": "The 'Configuration' values. Keys must match the template's placeholder registry.",
      "patternProperties": {
        "^[A-Z0-9_]+$": {
          "type": ["string", "number", "boolean"],
          "description": "The value provided by the user."
        }
      },
      "additionalProperties": false
    }
  }
}