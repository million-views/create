{
  "schemaVersion": "1.0.0",
  "id": "million-views/react-spa",
  "name": "React Single Page Application",
  "description": "A modern React SPA with TypeScript, Vite, Tailwind CSS, and comprehensive tooling for rapid development",
  "version": "1.0.0",
  "author": "million-views",
  "license": "MIT",
  "tags": ["react", "spa", "typescript", "vite", "frontend"],
  "dimensions": {
    "deployment_target": {
      "values": ["vercel", "netlify", "github-pages", "surge"],
      "default": "vercel"
    },
    "features": {
      "values": ["router", "state-management", "api-client", "testing", "storybook", "pwa"],
      "default": ["router", "testing"]
    }
  },
  "hints": {
    "features": {
      "router": {
        "label": "React Router",
        "description": "Add client-side routing with React Router v6"
      },
      "state-management": {
        "label": "State Management",
        "description": "Add Zustand for lightweight state management"
      },
      "api-client": {
        "label": "API Client",
        "description": "Add TanStack Query for server state management"
      },
      "testing": {
        "label": "Testing Suite",
        "description": "Add Vitest, React Testing Library, and Playwright"
      },
      "storybook": {
        "label": "Storybook",
        "description": "Add Storybook for component development"
      },
      "pwa": {
        "label": "Progressive Web App",
        "description": "Add PWA capabilities with service worker"
      }
    }
  },
  "constants": {
    "nodeVersion": ">=18.0.0",
    "reactVersion": "^18.2.0",
    "typescriptVersion": "^5.0.0"
  },
  "setup": {
    "policy": "strict",
    "steps": [
      {
        "type": "copy",
        "source": "src/",
        "target": "src/"
      },
      {
        "type": "copy",
        "source": "public/",
        "target": "public/"
      },
      {
        "type": "render",
        "source": "package.json.hbs",
        "target": "package.json"
      },
      {
        "type": "render",
        "source": "index.html.hbs",
        "target": "index.html"
      },
      {
        "type": "render",
        "source": "README.md.hbs",
        "target": "README.md"
      },
      {
        "type": "shell",
        "command": "npm install",
        "description": "Install dependencies"
      }
    ]
  },
  "placeholders": [
    {
      "name": "projectName",
      "description": "Name of your React application",
      "type": "string",
      "default": "my-react-app",
      "pattern": "^[a-z0-9-]+$",
      "required": true
    },
    {
      "name": "title",
      "description": "Application title",
      "type": "string",
      "default": "My React App",
      "required": true
    }
  ],
  "handoff": [
    "npm run dev # Start development server",
    "npm run build # Build for production",
    "npm run preview # Preview production build",
    "npm test # Run tests",
    "Configure your deployment platform",
    "Customize styling and components as needed"
  ]
}