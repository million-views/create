{
    "kiroAgent.configureMCP": "Enabled",
    "kiroAgent.trustedCommands": [
        "npm install *",
        "npm ci *",
        "npm run *",
        "npm test *",
        "node --check *",
        "node -c *",
        "node bin/index.mjs *",
        "node tests/*",
        "node tests/*.test.mjs",
        "git --no-pager status *",
        "git --no-pager log *",
        "git --no-pager show *",
        "git status *",
        "git log *",
        "git show *",
        "git add *",
        "git commit *",
        "git restore *",
        "git reset --soft *",
        "git rm --cached *",
        "ls -la",
        "find . -name *",
        "grep *",
        "head *",
        "ast-grep *",
        "cd test*",
        "node tests/cache-manager.test.mjs",
        "node tests/logger.test.mjs",
        "node tests/template-discovery.test.mjs",
        "node tests/dry-run-engine.test.mjs",
        "node tests/cli-integration.test.mjs",
        "node tests/cli.test.mjs",
        "node bin/index.mjs --help | grep -A 10 \"log-file\\|list-templates\\|dry-run\\|no-cache\\|cache-ttl\"",
        "find . -maxdepth 1 -type d -name \"*-test-*\" -exec rm -rf {} \\;",
        "find . -maxdepth 1 -type d -name \".tmp-template-*\" -exec rm -rf {} \\;",
        "find tests -name \"*.mjs\" -exec grep -l \"createTempDir\\|tempPath\\|tmpdir\" {} \\;",
        "grep -n \"async.*test\\|await.*test\\|runner\\.test\" tests/*.mjs | wc -l",
        "for file in tests/*.mjs; do echo \"=== $file ===\"; grep -c \"await.*test\\|runner\\.test\" \"$file\" 2>/dev/null || echo \"0\"; done",
        "node tests/security-tempdir.test.mjs",
        "node bin/index.mjs test-project --from-template basic --repo /nonexistent/path/with/private/data 2>&1 | head -10",
        "sed -i '' 's/features: \\[\\]/options: []/g' tests/cli.test.mjs",
        "sed -i '' 's/features: env\\.features/options: env.options/g' tests/cli.test.mjs",
        "node tests/argument-parser.test.mjs",
        "node tests/security.test.mjs",
        "node tests/spec-compliance-verification.mjs",
        "chmod +x scripts/validate-docs.mjs",
        "node scripts/validate-docs.mjs",
        "mv .kiro/steering/documentation-maintenance.md .kiro/steering/documentation-standards.md",
        "mkdir -p rules tests",
        "chmod +x scripts/comprehensive-validation.mjs",
        "node scripts/comprehensive-validation.mjs --docs-only",
        "rm -rf tests utils",
        "git diff sgconfig.yml"
    ]
}