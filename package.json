{
  "name": "@m5nv/create",
  "version": "1.0.0",
  "private": false,
  "type": "module",
  "description": "Unified CLI for project scaffolding and template authoring",
  "bin": {
    "create": "./bin/create/index.mts",
    "create-scaffold": "./bin/create-scaffold/index.mts",
    "make-template": "./bin/make-template/index.mts"
  },
  "exports": {
    ".": "./bin/create/index.mts",
    "./scaffold": "./bin/create/domains/scaffold/index.mts",
    "./template": "./bin/create/domains/template/index.mts",
    "./bin/*": "./bin/*",
    "./lib/*": "./lib/*",
    "./schema/template.json": "./schema/template.json",
    "./schema/template.v1.json": "./schema/template.v1.json",
    "./schema/selection.json": "./schema/selection.json",
    "./schema/selection.v1.json": "./schema/selection.v1.json",
    "./types/template-schema": {
      "types": "./types/template-schema.d.ts",
      "default": "./types/template-schema.mjs"
    },
    "./types/selection-schema": {
      "types": "./types/selection-schema.d.ts",
      "default": "./types/selection-schema.mjs"
    }
  },
  "files": [
    "bin",
    "lib",
    "schema",
    "types",
    "scripts",
    "docs",
    "LICENSE",
    "README.md"
  ],
  "engines": {
    "node": ">=23.0.0"
  },
  "keywords": [
    "scaffold",
    "scaffolding",
    "templates",
    "cli",
    "esm",
    "million-views",
    "project-generator"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/million-views/create"
  },
  "bugs": {
    "url": "https://github.com/million-views/create/issues"
  },
  "homepage": "https://github.com/million-views/create#readme",
  "dependencies": {
    "@tree-sitter-grammars/tree-sitter-markdown": "^0.3.2",
    "jsdom": "^27.2.0",
    "jsonpath-plus": "^10.3.0",
    "tree-sitter": "^0.21.1",
    "tree-sitter-javascript": "^0.21.4",
    "tree-sitter-typescript": "^0.23.2",
    "yaml": "^2.7.0"
  },
  "devDependencies": {
    "@eslint/markdown": "^7.5.1",
    "@types/eslint": "^9.6.1",
    "@types/node": "^24.10.1",
    "c8": "^10.1.3",
    "eslint": "^9.39.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-promise": "^7.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "build:schema": "node ./scripts/build-template-schema.mjs",
    "build:schema:check": "node ./scripts/build-template-schema.mjs --check && tsc --noEmit --project tsconfig.json",
    "build:docs": "node ./scripts/generate-cli-reference.mjs",
    "lint": "eslint .",
    "lint:docs": "node ./scripts/validate-docs.mjs",
    "lint:code": "node ./scripts/comprehensive-validation.mjs --code-only",
    "lint:mocks": "node ./scripts/lint-test-mocks.mjs",
    "lint:all": "npm run lint && node ./scripts/comprehensive-validation.mjs",
    "prepare": "husky",
    "test": "node ./scripts/test-runner.mjs",
    "test:coverage": "c8 --all --src lib --src bin --extension .mts --extension .mjs --extension .js --reporter=json-summary --reporter=text --reports-dir tmp/c8-baseline npm test",
    "test:unit": "node ./scripts/test-runner.mjs --suite unit",
    "test:integration": "node ./scripts/test-runner.mjs --suite integration",
    "test:system": "node ./scripts/test-runner.mjs --suite system",
    "test:suite": "node ./scripts/test-runner.mjs --suite",
    "test:scaffold": "node ./scripts/test-runner.mjs --suite create-scaffold",
    "test:scaffold:new": "node scripts/test-runner.mjs --suite \"Create-Scaffold New Tests\"",
    "test:scaffold:list": "node scripts/test-runner.mjs --suite \"Create-Scaffold List Tests\"",
    "test:scaffold:validate": "node scripts/test-runner.mjs --suite \"Create-Scaffold Validate Tests\"",
    "test:template": "node ./scripts/test-runner.mjs --suite make-template",
    "test:template:init": "node scripts/test-runner.mjs --suite \"Make-Template Init Tests\"",
    "test:template:hints": "node scripts/test-runner.mjs --suite \"Make-Template Hints Tests\"",
    "test:template:convert": "node scripts/test-runner.mjs --suite \"Make-Template Convert Tests\"",
    "test:template:restore": "node scripts/test-runner.mjs --suite \"Make-Template Restore Tests\"",
    "test:template:test": "node scripts/test-runner.mjs --suite \"Make-Template Test Command Tests\"",
    "test:template:validate": "node scripts/test-runner.mjs --suite \"Make-Template Validate Tests\"",
    "typecheck": "tsc --noEmit",
    "validate": "npm run build:schema:check && node ./scripts/comprehensive-validation.mjs"
  },
  "lint-staged": {
    "*.{js,mjs,cjs,ts,mts,cts}": [
      "eslint --fix"
    ],
    "*.md": [
      "eslint --fix"
    ],
    "bin/**/commands/**/help.mts": [
      "node ./scripts/generate-cli-reference.mjs",
      "git add docs/reference/cli-reference.md"
    ]
  }
}
