# Server Configuration
PORT={{port}}
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=http://localhost:3000{{#if (includes features 'auth')}}

# JWT Configuration
JWT_SECRET={{jwtSecret}}
JWT_EXPIRES_IN=7d{{/if}}{{#if (includes features 'database')}}

# Database Configuration
{{#if (eq database 'postgresql')}}
DATABASE_URL=postgresql://username:password@localhost:5432/{{projectName}}_db
{{/if}}
{{#if (eq database 'mysql')}}
DATABASE_URL=mysql://username:password@localhost:3306/{{projectName}}_db
{{/if}}
{{#if (eq database 'sqlite')}}
DATABASE_URL=sqlite://./{{projectName}}.db
{{/if}}
{{#if (eq database 'mongodb')}}
MONGODB_URI=mongodb://localhost:27017/{{projectName}}_db
{{/if}}{{/if}}