{
    "kiroAgent.configureMCP": "Enabled",
    "kiroAgent.trustedCommands": [
        "npm install *",
        "npm ci *",
        "npm run *",
        "npm test *",
        "node --check *",
        "node -c *",
        "node bin/index.mjs *",
        "node test/*",
        "git --no-pager status *",
        "git --no-pager log *",
        "git --no-pager show *",
        "git status *",
        "git log *",
        "git show *",
        "git add *",
        "git commit *",
        "git restore *",
        "git reset --soft *",
        "git rm --cached *",
        "ls -la",
        "find . -name *",
        "grep *",
        "head *",
        "ast-grep *"
    ]
}