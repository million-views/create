{
  "$id": "https://m5nv.com/schema/template.v1.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "template.json v1",
  "type": "object",
  "required": ["setup", "featureSpecs", "constants"],
  "properties": {
    "schemaVersion": { "type": "string" },
    "title": { "type": "string" },
    "id": { "type": "string" },
    "name": { "type": "string" },
    "description": { "type": "string" },

    "setup": {
      "type": "object",
      "required": ["dimensions", "gates", "policy"],
      "properties": {
        "authoring": { "type": "string", "enum": ["composable", "fixed"] },
        "policy": { "type": "string", "enum": ["strict", "lenient"] },

        "dimensions": {
          "type": "object",
          "required": ["deployment", "features", "database", "storage", "auth", "payments", "analytics"],
          "properties": {
            "deployment": {
              "type": "object",
              "required": ["type", "values", "default"],
              "properties": {
                "type": { "const": "single" },
                "values": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "anyOf": [
                      { "enum": ["cloudflare-workers", "linode", "droplet", "deno-deploy"] },
                      { "type": "string", "pattern": "^x-[a-z0-9-]+$" }
                    ]
                  },
                  "minItems": 1
                },
                "default": {
                  "type": "string",
                  "anyOf": [
                    { "enum": ["cloudflare-workers", "linode", "droplet", "deno-deploy"] },
                    { "type": "string", "pattern": "^x-[a-z0-9-]+$" }
                  ]
                },
                "ui": { "type": "object" }
              },
              "additionalProperties": false
            },

            "features": {
              "type": "object",
              "required": ["type", "values", "default"],
              "properties": {
                "type": { "const": "multi" },
                "values": { "type": "array", "items": { "type": "string" } },
                "default": { "type": "array", "items": { "type": "string" } },
                "ui": { "type": "object" }
              },
              "additionalProperties": false
            },

            "database": {
              "type": "object",
              "required": ["type", "values", "default"],
              "properties": {
                "type": { "const": "single" },
                "values": { "type": "array", "items": { "enum": ["d1", "tursodb", "sqlite3", "none"] } },
                "default": { "enum": ["d1", "tursodb", "sqlite3", "none"] },
                "ui": { "type": "object" }
              },
              "additionalProperties": false
            },

            "storage": {
              "type": "object",
              "required": ["type", "values", "default"],
              "properties": {
                "type": { "const": "single" },
                "values": { "type": "array", "items": { "enum": ["r2", "s3", "file", "none"] } },
                "default": { "enum": ["r2", "s3", "file", "none"] },
                "ui": { "type": "object" }
              },
              "additionalProperties": false
            },

            "auth": {
              "type": "object",
              "required": ["type", "values", "default"],
              "properties": {
                "type": { "const": "multi" },
                "values": { "type": "array", "items": { "enum": ["google", "github"] } },
                "default": { "type": "array", "items": { "enum": ["google", "github"] } },
                "ui": { "type": "object" }
              },
              "additionalProperties": false
            },

            "payments": {
              "type": "object",
              "required": ["type", "values", "default"],
              "properties": {
                "type": { "const": "single" },
                "values": { "type": "array", "items": { "enum": ["stripe", "hyperswitch", "none"] } },
                "default": { "enum": ["stripe", "hyperswitch", "none"] },
                "ui": { "type": "object" }
              },
              "additionalProperties": false
            },

            "analytics": {
              "type": "object",
              "required": ["type", "values", "default"],
              "properties": {
                "type": { "const": "single" },
                "values": { "type": "array", "items": { "enum": ["umami", "plausible", "none"] } },
                "default": { "enum": ["umami", "plausible", "none"] },
                "ui": { "type": "object" }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        },

        "gates": {
          "type": "object",
          "required": ["deployment"],
          "properties": {
            "deployment": {
              "type": "object",
              "properties": {
                "cloudflare-workers": {
                  "type": "object",
                  "required": ["database", "storage"],
                  "properties": {
                    "database": { "type": "array", "items": { "enum": ["d1", "tursodb", "sqlite3", "none"] } },
                    "storage": { "type": "array", "items": { "enum": ["r2", "s3", "file", "none"] } }
                  },
                  "additionalProperties": false
                },
                "linode": {
                  "type": "object",
                  "required": ["database", "storage"],
                  "properties": {
                    "database": { "type": "array", "items": { "enum": ["d1", "tursodb", "sqlite3", "none"] } },
                    "storage": { "type": "array", "items": { "enum": ["r2", "s3", "file", "none"] } }
                  },
                  "additionalProperties": false
                },
                "droplet": {
                  "type": "object",
                  "required": ["database", "storage"],
                  "properties": {
                    "database": { "type": "array", "items": { "enum": ["d1", "tursodb", "sqlite3", "none"] } },
                    "storage": { "type": "array", "items": { "enum": ["r2", "s3", "file", "none"] } }
                  },
                  "additionalProperties": false
                },
                "deno-deploy": {
                  "type": "object",
                  "required": ["database", "storage"],
                  "properties": {
                    "database": { "type": "array", "items": { "enum": ["d1", "tursodb", "sqlite3", "none"] } },
                    "storage": { "type": "array", "items": { "enum": ["r2", "s3", "file", "none"] } }
                  },
                  "additionalProperties": false
                }
              },
              "patternProperties": {
                "^x-[a-z0-9-]+$": {
                  "type": "object",
                  "required": ["database", "storage"],
                  "properties": {
                    "database": { "type": "array", "items": { "enum": ["d1", "tursodb", "sqlite3", "none"] } },
                    "storage": { "type": "array", "items": { "enum": ["r2", "s3", "file", "none"] } }
                  },
                  "additionalProperties": false
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },

    "featureSpecs": {
      "type": "object",
      "minProperties": 0,
      "patternProperties": {
        "^[a-z0-9_:-]{2,64}$": {
          "type": "object",
          "required": ["label", "description", "needs"],
          "properties": {
            "label": { "type": "string", "minLength": 1, "maxLength": 80 },
            "description": { "type": "string", "minLength": 1, "maxLength": 280 },
            "needs": {
              "type": "object",
              "required": ["database", "auth", "payments", "storage"],
              "properties": {
                "database": { "enum": ["required", "optional", "none"] },
                "auth": { "enum": ["required", "optional", "none"] },
                "payments": { "enum": ["required", "optional", "none"] },
                "storage": { "enum": ["required", "optional", "none"] }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },

    "hints": {
      "type": "object",
      "properties": {
        "features": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "label", "description", "needs"],
            "properties": {
              "id": { "type": "string", "pattern": "^[a-z0-9_:-]{2,64}$" },
              "label": { "type": "string" },
              "description": { "type": "string" },
              "examples": { "type": "array", "items": { "type": "string" } },
              "needs": {
                "type": "object",
                "required": ["database", "auth", "payments", "storage"],
                "properties": {
                  "database": { "enum": ["required", "optional", "none"] },
                  "auth": { "enum": ["required", "optional", "none"] },
                  "payments": { "enum": ["required", "optional", "none"] },
                  "storage": { "enum": ["required", "optional", "none"] }
                },
                "additionalProperties": false
              }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    },

    "constants": {
      "type": "object",
      "required": ["language", "framework", "styling", "ci_cd", "code_quality", "transactional_emails"],
      "properties": {
        "language": { "const": "typescript" },
        "framework": { "const": "react-router-v7" },
        "styling": { "const": "tailwind+daisyui" },
        "ci_cd": { "const": "github-actions" },
        "code_quality": { "const": "prettier" },
        "transactional_emails": { "const": "gmail-org-service-account" }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": true
}
