{
    "name": "@m5nv/create",
    "version": "0.1.0",
    "private": false,
    "type": "module",
    "description": "Project scaffolding CLI for Million Views templates and custom git-based template repos.",
    "bin": {
        "m5nv-create": "./bin/index.mjs"
    },
    "exports": {
        ".": "./bin/index.mjs"
    },
    "engines": {
        "node": ">=22.0.0"
    },
    "keywords": [
        "scaffold",
        "templates",
        "cli",
        "esm",
        "million-views"
    ],
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/million-views/create.git"
    },
    "bugs": {
        "url": "https://github.com/million-views/create/issues"
    },
    "homepage": "https://github.com/million-views/create#readme",
    "devDependencies": {
        "@types/eslint": "^9.6.1",
        "eslint": "^9.38.0",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-n": "^17.23.1",
        "eslint-plugin-promise": "^7.2.1"
    },
    "scripts": {
        "lint": "eslint .",
        "prepare": "npm run lint",
        "test": "node ./scripts/test-runner.mjs",
        "test:all": "node ./scripts/test-runner.mjs",
        "test:quick": "node ./scripts/test-runner.mjs --quick",
        "test:env": "node ./test/environmentFactory.test.mjs",
        "test:functional": "node ./test/cli.test.mjs",
        "test:spec": "node ./test/spec-compliance-verification.mjs",
